{
  // Horizontal: When width of window is greater than height
  "tracker_horizontal": {
    "type": "container",
    "content": {
      "type": "dock",
      "dropshadow": true,
      "content": [
        {
          "type": "dock",
          "dock": "bottom",
          "h_alignment": "stretch",
          "content": [
            {
              "type": "group",
              "header": "Items",
              "dock": "left",
              "header_content": {
                "type": "button_popup",
                "style": "settings",
                "popup_background": "#55212121",
                "layout": "settings_popup"
              },
              "content": {
                "type": "layout",
                "key": "shared_item_grid_horizontal"
              }
            },
            {
              "type": "group",
              "header": "Pinned Locations",
              "content": {
                "type": "recentpins",
                "style": "wrap",
                "h_alignment": "stretch",
                "v_alignment": "stretch",
                "orientation": "horizontal",
                "compact": true
              }
            }
          ]
        },
        {
          "type": "layout",
          "key": "sudra_map"
        }
      ]
    }
  }
}
